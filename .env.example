# =================================================================
# CONFIGURAÇÕES BÁSICAS
# =================================================================
SECRET_KEY=your-secret-key-here-make-it-very-long-and-secure
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# =================================================================
# BANCO DE DADOS - POSTGRESQL (PADRÃO)
# =================================================================
# Configurações para PostgreSQL (desenvolvimento e produção)
DATABASE_NAME=formafit_db
DATABASE_USER=formafit_user
DATABASE_PASSWORD=formafit123
DATABASE_HOST=localhost
DATABASE_PORT=5432

# =================================================================
# FALLBACK PARA SQLITE (OPCIONAL)
# =================================================================
# Descomente a linha abaixo APENAS se não conseguir usar PostgreSQL
# USE_SQLITE=True

# =================================================================
# API CHATPRO (WHATSAPP)
# =================================================================
CHATPRO_API_KEY=your-chatpro-api-key-here
CHATPRO_API_URL=https://api.chatpro.com.br

